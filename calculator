import pytest
from app.calculator import Calculator

class TestCalc:
        def setup(self):
            self.calc = Calculator

        def test_multiply_calculate_correctly(self):
            assert self.calc.multiply(self, 5, 5) == 25

            def test_division_calculate_correctly(self):
                assert self.calc.division(self, 15, 5) == 3

                def test_substraction_calculate_correctly(self):
                    assert self.calc.substraction(self, 25, 10) == 15

                    def test_adding_calculate_correctly(self):
                        assert self.calc.adding(self, 15, 15) == 30
